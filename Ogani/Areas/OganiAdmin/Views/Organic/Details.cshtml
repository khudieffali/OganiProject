@model Organic

<div class="card">
    <div class="card-header">
        <h5>
            Detallar səhifəsi
        </h5>
        </br>
        <a asp-controller="Organic" asp-action="Index" class="btn btn-primary mt-3">Geriyə Qayıt</a>
    </div>
    <div class="card-block">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Şəkil</label>
            <div class="col-sm-10">
                <div class="col-sm-4" id="oldPhoto">
                    <label class="control-label oldPhotoLabel col-sm-12">Köhnə şəkil</label>
                    <img src="~/uploads/images/@Html.DisplayFor(x=>x.ImageUrl)" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Başlıq</label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" placeholder="Başlıq" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Alt başlıq</label>
            <div class="col-sm-10">
                <input asp-for="SubTitle" class="form-control" placeholder="Alt Başlıq" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Açıqlama</label>
            <div class="col-sm-10">
                <textarea asp-for="Description" class="form-control" aria-label="With textarea" placeholder="Açıqlama" disabled></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Yaradılma tarixi</label>
            <div class="col-sm-10">
                <input asp-for="CreatedAt" class="form-control" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Kim tərəfindən yaradılıb</label>
            <div class="col-sm-10">
                <input asp-for="CreatedBy" class="form-control" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Dəyişiklik olunma tarixi</label>
            <div class="col-sm-10">
                <input asp-for="UpdatedAt" class="form-control" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Kim tərəfindən dəyişiklik edilib</label>
            <div class="col-sm-10">
                <input asp-for="UpdatedBy" class="form-control" disabled>
            </div>
        </div>
        <div class="form-group row">
            <div class="custom-control custom-switch col-sm-12 ml-3 mt-3">
                <input type="checkbox" class="custom-control-input col-form-label" id="customswitch1" asp-for="IsMain" disabled>
                <label class="custom-control-label" for="customswitch1">Saytda görünüm</label>
            </div>
        </div>
    </div>
</div>