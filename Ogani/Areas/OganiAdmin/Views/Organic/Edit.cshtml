@model Organic

<div class="card">
    <div class="card-header">
        <h5>
            Dəyişdirilmə səhifəsi
        </h5>
        </br>
        <a asp-controller="Organic" asp-action="Index" class="btn btn-primary mt-3">Geriyə Qayıt</a>
    </div>
    <div class="card-block">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Şəkil</label>
                <div class="col-sm-10">
                    <label asp-for="ImageUrl" class="control-label label-photo">Şəkil Seç (<span>0</span>)</label>
                    <input asp-for="ImageUrl" type="file" class="form-control d-none">
                    <div class="col-sm-4" id="oldPhoto">
                        <label class="control-label oldPhotoLabel col-sm-12">Köhnə şəkil</label>
                        <img src="~/uploads/images/@Html.DisplayFor(x=>x.ImageUrl)" />
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Başlıq</label>
                <div class="col-sm-10">
                    <input asp-for="Title" class="form-control" placeholder="Başlıq">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Alt başlıq</label>
                <div class="col-sm-10">
                    <input asp-for="SubTitle" class="form-control" placeholder="Alt Başlıq">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Açıqlama</label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" class="form-control" aria-label="With textarea" placeholder="Açıqlama"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="custom-control custom-switch col-sm-12 ml-3 mt-3">
                    <input type="checkbox" class="custom-control-input col-form-label" id="customswitch1" asp-for="IsMain">
                    <label class="custom-control-label" for="customswitch1">Saytda göstər</label>
                </div>
            </div>

            <input type="submit" class="btn btn-success text-white mt-3" value="Dəyişiklikləri yadda saxla">
        </form>
    </div>
</div>
