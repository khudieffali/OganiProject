@model IEnumerable<Tag>

    <!-- [ basic-table ] start -->
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Teqlər</h5>
                <div class="btnCreate">
                    <a asp-controller="Tags" asp-action="Create">
                        <button class="btn btn-primary">Əlavə et</button>
                    </a>
                </div>
            </div>
            <div class="card-body table-border-style">
                <div class="table-responsive">
                    <table id="myTable">
                        <thead class="table-primary">
                            <tr>
                                <th class="col-sm-6">Adı</th>
                                <th>Parametrlər</th>
                            </tr>
                        </thead>
                        <tbody id="TagList">
                           @await Html.PartialAsync("_PartialTag")
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- [ basic-table ] end -->
    <!-- [ inverse-table ] start -->
@section scripts{
    <script>
        function removeEntity(id) {
            Swal.fire({
                title: "Silmək istədiyinizə əminsiniz?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Bəli, əminəm!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        method: "POST",
                        url: "@Url.Action("delete", "tags")",
                        data: { id },
                        success: (result) => {
                            if (!result.error) {
                                    Swal.fire({
                                        title: "Uğurla Silindi!",
                                        icon: "success"
                                    });
                                $("#TagList").html(result)
                                return;
                             }
                                Swal.fire({
                                    title: "Silinmə Uğursuz oldu!",
                                    icon: "error"
                                });
                            },
                            error: (error) => {
                                Swal.fire({
                                    title: "Silinmə Uğursuz oldu!",
                                    icon: "error"
                                });
                            }
                        })
                }
            });
        }
   
    </script>
    <script>
        var table = new DataTable('#myTable', {
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.8/i18n/az-AZ.json',
            },
        });
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
      
    </script>
    
}