@using Business.Modules.BlogsModule.Queries.BlogGetAllQuery
@model IEnumerable<BlogGetAllDto>

@foreach (var item in Model)
{
    <tr>
        <td class="col-md-2 col-sm-3">
            <img src="~/uploads/images/@item.ImageUrl" />
        </td>
        <td>@item.Title</td>
        <td> @(item.Description != null && item.Description.Length > 70 ? item.Description.Substring(0, 70) : item.Description) ...</td>
        <td>@item.BlogCategoryName</td>
        <td>
            <a asp-controller="Blogs" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-white" data-toggle="tooltip" data-placement="top" title="Dəyiş"><i class="fa-solid fa-pen-to-square"></i></a>
            <a asp-controller="Blogs" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary text-white" data-toggle="tooltip" data-placement="top" title="Detallar"><i class="fa-solid fa-info"></i></a>
            <a onclick="removeEntity(@item.Id)" class="btn btn-danger text-white" data-toggle="tooltip" data-placement="top" title="Sil">
                <i class="fa-solid fa-trash"></i>
            </a>
        </td>
    </tr>
}