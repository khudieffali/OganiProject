@using Business.Modules.BlogsModule.Queries.BlogGetQuery
@model BlogGetDto
@{
    var blogCategories = ViewBag.BlogCategories;
    var tagList = ViewBag.TagList;
}
<div class="card">
    <div class="card-header">
        <h5>
            Əlavə et səhifəsi
        </h5>
        </br>
        <a asp-controller="Blogs" asp-action="Index" class="btn btn-primary mt-3">Geriyə Qayıt</a>
    </div>
    <div class="card-block">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Şəkil</label>
                <div class="col-sm-10">
                    <label asp-for="ImageUrl" class="control-label label-photo">Şəkil Seç (<span>0</span>)</label>
                    <input asp-for="ImageUrl" type="file" class="form-control d-none">
                    <div class="col-sm-4" id="oldPhoto">
                        <label class="control-label oldPhotoLabel col-sm-12">Köhnə şəkil</label>
                        @if (Model.ImageUrl != null)
                        {
                            <img src="~/uploads/images/@Html.DisplayFor(x=>x.ImageUrl)" />
                        }
                        else
                        {
                            <label class="col-sm-12 text-center">Şəkil Mövcud deyil</label>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Başlıq</label>
                <div class="col-sm-10">
                    <input asp-for="Title" class="form-control" placeholder="Başlıq">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Açıqlama</label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" class="form-control" aria-label="With textarea" placeholder="Açıqlama"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Aid olduğu kateqoriya</label>
                <div class="col-sm-10">
                    <select asp-items="blogCategories" asp-for="BlogCategoryId" class="js-select1">
                        <option selected disabled>Kateqoriya seçin</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Etiketlər (Teqlər)</label>
                <div class="col-sm-10">
                    <select asp-items="tagList" name="TagIds" asp-for="BlogTagId" class="js-select2" multiple="multiple">
                    </select>
                </div>
            </div>


            <input type="submit" class="btn btn-success text-white mt-3" value="Yadda saxla">
        </form>
    </div>
</div>

