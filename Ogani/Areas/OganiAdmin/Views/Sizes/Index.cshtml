@model IEnumerable<Size>

<!-- [ basic-table ] start -->
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h5>Ölçülər</h5>
            <div class="btnCreate">
                <a asp-controller="Sizes" asp-action="Create">
                    <button class="btn btn-primary">Əlavə et</button>
                </a>
            </div>
        </div>
        <div class="card-body table-border-style">
            <div class="table-responsive">
                <table id="myTable">
                    <thead class="table-primary">
                        <tr>
                            <th class="col-sm-6">Adı</th>
                            <th>Parametrlər</th>
                        </tr>
                    </thead>
                    <tbody id="SizeList">
                        @await Html.PartialAsync("_PartialSize")
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- [ basic-table ] end -->
<!-- [ inverse-table ] start -->
@section scripts {
    <script>
        function removeEntity(id) {
            Swal.fire({
                title: "Silmək istədiyinizə əminsiniz?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                cancelButtonText: "Ləğv et!",
                confirmButtonText: "Bəli, əminəm!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        method: "POST",
                        url: "@Url.Action("delete", "sizes")",
                        data: { id },
                        success: (result) => {
                            if (!result.error) {
                                Swal.fire({
                                    title: "Uğurla Silindi!",
                                    icon: "success"
                                });
                                $("#SizeList").html(result)
                                return;
                            }
                            Swal.fire({
                                title: "Silinmə Uğursuz oldu!",
                                icon: "error"
                            });
                        },
                        error: (error) => {
                            Swal.fire({
                                title: "Silinmə Uğursuz oldu!",
                                icon: "error"
                            });
                        }
                    })
                }
            });
        }

    </script>

}